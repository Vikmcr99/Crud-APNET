@model IEnumerable<GerenciamentoAniversarios.Models.Aniversariante>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista dos Aniversariantes</h2>

<p>
    <a asp-action="Create">Adicionar</a>
</p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sobrenome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sobrenome)
                    </td>
                    <td>
                        @item.DataNascimento.ToString("dd / MM / yyyy")
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Search" asp-controller="Aniversariante" method="get">
        <div class="form-group">
            <label class="control-label">Buscar aniversariante:</label>
            <input class="form-control" name="query" id="query" />
        </div>
        <div class="form-group">
            <input type="submit" value="Pesquisar" class="btn btn-dark" />
        </div>
    </form>

    <br />
    <h4>Alguém ta fazendo aniversário hoje?</h4>

    <p>
        <a class="btn btn-primary" asp-area="" asp-controller="Aniversariante" asp-action="AniversarioDoDia">Aniversariantes</a>
    </p>
